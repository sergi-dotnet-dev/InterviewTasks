@model SpaMvc.Models.Product
@{
    ViewBag.Title = "Редактирование товара";
}
<form asp-action="edit" asp-controller="product">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Наименование</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cost" class="control-label">Цена</label>
        <input type="number" asp-for="Cost" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descriptions" class="control-label">Описание</label>
        <input type="text" asp-for="Descriptions" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Color" class="control-label">Цвет</label>
        <input type="text" asp-for="Color" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>